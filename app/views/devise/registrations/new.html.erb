<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <div class="col-sm-offset-4 col-sm-10">
    <%= devise_error_messages! %>
  </div>
  <div class="form-group <%= 'has-error' if @user.errors[:name].any? %>">
      <%= f.label :name, class: 'col-sm-4 control-label' %>
      <div class="col-sm-6">
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>
  </div>

  <div class="form-group <%= 'has-error' if @user.errors[:email].any? %>">
      <%= f.label :email, class: 'col-sm-4 control-label' %>
      <div class="col-sm-6">
          <%= f.email_field :email, class: 'form-control' %>
      </div>
  </div>

  <div class="form-group <%= 'has-error' if @user.errors[:password].any? %>">
    <%= f.label :password, class: 'col-sm-4 control-label' %> 
    <div class="col-sm-6">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group <%= 'has-error' if @user.errors[:password_confirmation].any? %>">
    <%= f.label :password_confirmation, class: 'col-sm-4 control-label' %>
    <div class="col-sm-6">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
      <div class="col-sm-offset-4 col-sm-10">
        <%= f.submit "Sign up", class: 'btn btn-primary' %>
      </div>
  </div>
<% end %>
<div class="col-sm-offset-4 col-sm-10">
  <%= render "devise/shared/links" %>
</div>

